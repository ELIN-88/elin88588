
import React, { useState, useEffect, useMemo } from 'react';
import { TabType, DayPlan, Spot, SpotCategory } from './types';
import { INITIAL_ITINERARY } from './constants';
import BottomNav from './components/BottomNav';
import SpotCard from './components/SpotCard';
import SpotModal from './components/SpotModal';
import DayModal from './components/DayModal';
import { 
  Plane, Hotel, MapPin, Coins, Thermometer, Wind, Umbrella, 
  CloudSun, Sun, Cloud, ChevronRight, RefreshCw, Plus, Edit, 
  Coffee, Briefcase, Luggage, Calendar, FileCheck, Wifi, 
  ShieldCheck, CreditCard, Map as MapIcon, Navigation, Car,
  AlertCircle, CheckCircle2, XCircle, Info, ShieldAlert, Clock, ArrowRight, Route,
  TrendingUp, Calculator, Waves, Utensils, Beer, WashingMachine, HeartPulse
} from 'lucide-react';

const STORAGE_KEY = 'okinawa_staff_trip_2026_master_v3';
const HOTEL_ADDRESS = '3 Chome-18-33 Makishi, Naha, Okinawa 900-0013日本';

const adjustTime = (timeStr: string, minutesDelta: number): string => {
  const [hours, minutes] = timeStr.split(':').map(Number);
  const date = new Date();
  date.setHours(hours, minutes + minutesDelta);
  return `${String(date.getHours()).padStart(2, '0')}:${String(date.getMinutes()).padStart(2, '0')}`;
};

const getTimeMinutes = (timeStr: string): number => {
  const [h, m] = timeStr.split(':').map(Number);
  return h * 60 + m;
};

const App: React.FC = () => {
  const [activeTab, setActiveTab] = useState<TabType>(TabType.OVERVIEW);
  const [selectedDay, setSelectedDay] = useState<number>(1);
  const [mapSelectedDay, setMapSelectedDay] = useState<number>(1);
  
  const [itinerary, setItinerary] = useState<DayPlan[]>(() => {
    const saved = localStorage.getItem(STORAGE_KEY);
    return saved ? JSON.parse(saved) : INITIAL_ITINERARY;
  });
  
  useEffect(() => {
    localStorage.setItem(STORAGE_KEY, JSON.stringify(itinerary));
  }, [itinerary]);

  const [isSpotModalOpen, setIsSpotModalOpen] = useState(false);
  const [isDayModalOpen, setIsDayModalOpen] = useState(false);
  const [editingSpot, setEditingSpot] = useState<Spot | null>(null);

  // 匯率換算狀態
  const [jpyInput, setJpyInput] = useState<string>('1000');
  const [customRate, setCustomRate] = useState<string>('0.215');
  const twdResult = useMemo(() => {
    const jpy = parseFloat(jpyInput) || 0;
    const rate = parseFloat(customRate) || 0;
    return (jpy * rate).toFixed(0);
  }, [jpyInput, customRate]);

  const activeDayPlan = useMemo(() => {
    const plan = itinerary.find(d => d.day === selectedDay);
    if (!plan) return null;
    return { ...plan, spots: [...plan.spots].sort((a, b) => a.time.localeCompare(b.time)) };
  }, [itinerary, selectedDay]);

  const mapDayPlan = useMemo(() => {
    const plan = itinerary.find(d => d.day === mapSelectedDay);
    if (!plan) return null;
    return { ...plan, spots: [...plan.spots].sort((a, b) => a.time.localeCompare(b.time)) };
  }, [itinerary, mapSelectedDay]);

  const handleSaveSpot = (spotData: Spot) => {
    setItinerary(prevItinerary => {
      return prevItinerary.map(dayPlan => {
        if (dayPlan.day === selectedDay) {
          let updatedSpots = [...dayPlan.spots];
          const existingSpotIndex = updatedSpots.findIndex(s => s.id === spotData.id);
          if (existingSpotIndex >= 0) {
            const oldTime = updatedSpots[existingSpotIndex].time;
            const newTime = spotData.time;
            if (oldTime !== newTime) {
              const delta = getTimeMinutes(newTime) - getTimeMinutes(oldTime);
              updatedSpots = updatedSpots.map((s, idx) => {
                if (idx === existingSpotIndex) return spotData;
                if (getTimeMinutes(s.time) > getTimeMinutes(oldTime)) {
                  return { ...s, time: adjustTime(s.time, delta) };
                }
                return s;
              });
            } else {
              updatedSpots[existingSpotIndex] = spotData;
            }
          } else {
            updatedSpots.push(spotData);
          }
          return { ...dayPlan, spots: updatedSpots.sort((a, b) => a.time.localeCompare(b.time)) };
        }
        return dayPlan;
      });
    });
  };

  const handleSaveDay = (dayData: Partial<DayPlan>) => {
    setItinerary(prev => prev.map(d => d.day === selectedDay ? { ...d, ...dayData } : d));
  };

  const handleDeleteSpot = (id: string) => {
    if (!window.confirm('確定要刪除嗎？')) return;
    setItinerary(itinerary.map(d => d.day === selectedDay ? { ...d, spots: d.spots.filter(s => s.id !== id) } : d));
  };

  const renderOverview = () => (
    <div className="space-y-4 animate-fadeIn pb-32">
      {/* 1. 航班資訊 */}
      <div className="bg-white p-6 rounded-[24px] border border-slate-100 shadow-sm">
        <h3 className="text-lg font-bold flex items-center gap-2 mb-5 text-slate-800">
          <Plane className="text-[#E11D48]" size={20} /> 航班與行李
        </h3>
        <div className="space-y-6">
          <div className="relative pl-5 border-l-2 border-rose-100">
            <div className="absolute -left-[6.5px] top-0 w-3 h-3 rounded-full bg-[#E11D48] border-2 border-white"></div>
            <p className="text-[10px] text-[#E11D48] font-bold tracking-widest mb-1 uppercase">Departure 01/11 (Sun)</p>
            <div className="flex justify-between items-center">
                <p className="text-sm font-bold text-slate-700">13:25 TPE T1</p>
                <span className="text-[9px] font-bold bg-rose-50 text-[#E11D48] px-2 py-0.5 rounded">AirAsia FD230 • 20kg</span>
            </div>
          </div>
          <div className="relative pl-5 border-l-2 border-cyan-100">
            <div className="absolute -left-[6.5px] top-0 w-3 h-3 rounded-full bg-[#0891B2] border-2 border-white"></div>
            <p className="text-[10px] text-[#0891B2] font-bold tracking-widest mb-1 uppercase">Return 01/14 (Wed)</p>
            <div className="flex justify-between items-center">
                <p className="text-sm font-bold text-slate-700">20:10 OKA</p>
                <span className="text-[9px] font-bold bg-cyan-50 text-[#0891B2] px-2 py-0.5 rounded">EVA Air BR185 • 23kg</span>
            </div>
          </div>
        </div>
      </div>

      {/* 2. 住宿資訊 (新增詳細內容) */}
      <div className="bg-white p-6 rounded-[24px] border border-slate-100 shadow-sm">
        <div className="flex justify-between items-start mb-5">
            <h3 className="text-lg font-bold flex items-center gap-2 text-slate-800">
                <Hotel className="text-[#E11D48]" size={20} /> 沖繩逸之彩飯店
            </h3>
            <span className="text-[10px] font-black text-white bg-[#0891B2] px-2 py-0.5 rounded-full">4 Nights</span>
        </div>
        
        <div className="flex items-start gap-2 text-[11px] text-slate-400 font-medium mb-6">
            <MapPin size={14} className="text-[#0891B2] mt-0.5 shrink-0" />
            <span>{HOTEL_ADDRESS}</span>
        </div>

        <div className="grid grid-cols-2 gap-2">
            <div className="bg-slate-50/80 p-3 rounded-xl border border-slate-100">
                <div className="flex items-center gap-2 mb-1">
                    <Utensils size={12} className="text-amber-500" />
                    <span className="text-[10px] font-black text-slate-400 uppercase tracking-wider">早餐資訊</span>
                </div>
                <p className="text-[11px] font-bold text-slate-600">07:00 - 10:00</p>
            </div>
            <div className="bg-slate-50/80 p-3 rounded-xl border border-slate-100">
                <div className="flex items-center gap-2 mb-1">
                    <WashingMachine size={12} className="text-[#0891B2]" />
                    <span className="text-[10px] font-black text-slate-400 uppercase tracking-wider">洗衣設備</span>
                </div>
                <p className="text-[11px] font-bold text-slate-600">2F 自助洗衣房</p>
            </div>
            <div className="bg-slate-50/80 p-3 rounded-xl border border-slate-100">
                <div className="flex items-center gap-2 mb-1">
                    <Beer size={12} className="text-[#E11D48]" />
                    <span className="text-[10px] font-black text-slate-400 uppercase tracking-wider">暢飲服務</span>
                </div>
                <p className="text-[11px] font-bold text-slate-600">全日啤酒/泡盛</p>
            </div>
            <div className="bg-slate-50/80 p-3 rounded-xl border border-slate-100">
                <div className="flex items-center gap-2 mb-1">
                    <Waves size={12} className="text-blue-400" />
                    <span className="text-[10px] font-black text-slate-400 uppercase tracking-wider">宵夜拉麵</span>
                </div>
                <p className="text-[11px] font-bold text-slate-600">20:30 - 21:30</p>
            </div>
        </div>
      </div>

      {/* 3. 行前清單 (新增保險) */}
      <div className="bg-white p-6 rounded-[24px] border border-slate-100 shadow-sm">
        <h3 className="text-lg font-bold flex items-center gap-2 mb-5 text-slate-800">
          <FileCheck className="text-[#0891B2]" size={20} /> 行前清單 Checklist
        </h3>
        <div className="space-y-2">
          {[
            { text: '護照 (正本+影本)', icon: <ShieldCheck size={14}/> },
            { text: '駕照正本 & 日文譯本', icon: <Route size={14}/> },
            { text: '保險 (自行加保)', icon: <HeartPulse size={14} className="text-rose-400"/> },
            { text: '日幣現金 & 高回饋信用卡', icon: <CreditCard size={14}/> },
            { text: 'Visit Japan Web QR Code', icon: <Calculator size={14}/> },
            { text: '網卡 / Wi-Fi 機確認', icon: <Wifi size={14}/> }
          ].map((item, i) => (
            <div key={i} className="flex items-center gap-3 p-3 bg-slate-50/50 rounded-xl border border-slate-50">
              <div className="w-5 h-5 rounded-full bg-white border border-slate-200 flex items-center justify-center text-[#0891B2]">
                <CheckCircle2 size={12} />
              </div>
              <span className="text-xs font-bold text-slate-600 flex items-center gap-2">
                {item.text}
              </span>
            </div>
          ))}
        </div>
      </div>
    </div>
  );

  const renderItinerary = () => (
    <div className="animate-fadeIn pb-32">
      <div className="flex gap-2 overflow-x-auto pb-6 custom-scrollbar sticky top-0 bg-[#F8FAFC]/90 backdrop-blur-md z-20 pt-2 px-1">
        {itinerary.map((dayPlan) => (
          <button
            key={dayPlan.day}
            onClick={() => setSelectedDay(dayPlan.day)}
            className={`shrink-0 w-16 py-3 rounded-2xl flex flex-col items-center transition-all ${
              selectedDay === dayPlan.day 
              ? 'bg-[#0891B2] text-white shadow-md' 
              : 'bg-white text-slate-400 border border-slate-100'
            }`}
          >
            <span className="text-[8px] font-bold uppercase opacity-60 mb-0.5">D</span>
            <span className="text-base font-bold">{dayPlan.day}</span>
          </button>
        ))}
      </div>

      {activeDayPlan && (
        <div className="space-y-4">
          <div className="px-1" onClick={() => setIsDayModalOpen(true)}>
            <p className="text-[10px] font-bold text-[#E11D48] uppercase tracking-widest mb-1">{activeDayPlan.date}</p>
            <h2 className="text-2xl font-bold text-slate-800 tracking-tight">{activeDayPlan.title}</h2>
          </div>

          <div className="grid grid-cols-2 gap-2">
            <div className="bg-white p-4 rounded-[20px] border border-slate-50">
              <span className="text-[9px] font-bold text-slate-300 uppercase block mb-1">穿著建議</span>
              <p className="text-[10px] text-slate-500 font-medium leading-relaxed">{activeDayPlan.clothingTips}</p>
            </div>
            <div className="bg-white p-4 rounded-[20px] border border-slate-50">
              <span className="text-[9px] font-bold text-slate-300 uppercase block mb-1">天氣重點</span>
              <p className="text-[10px] text-slate-500 font-medium leading-relaxed">{activeDayPlan.weatherTips}</p>
            </div>
          </div>

          <div className="mt-8 relative px-1">
            <div className="absolute left-6 top-0 bottom-0 w-[1px] timeline-line z-0"></div>
            <div className="space-y-10 relative z-10">
              {activeDayPlan.spots.map((spot, index) => (
                <React.Fragment key={spot.id}>
                  <SpotCard 
                    spot={spot} 
                    onEdit={(s) => { setEditingSpot(s); setIsSpotModalOpen(true); }}
                    onDelete={handleDeleteSpot}
                  />
                  {index < activeDayPlan.spots.length - 1 && spot.travelTime && (
                    <div className="flex items-center gap-3 pl-12 py-1">
                      <div className="bg-white px-3 py-1.5 rounded-full border border-slate-100 flex items-center gap-2 shadow-sm">
                        <Car size={10} className="text-[#0891B2]" />
                        <span className="text-[10px] font-bold text-slate-500">{spot.travelTime}</span>
                        <div className="w-[1px] h-2 bg-slate-100"></div>
                        <span className="text-[10px] font-medium text-slate-400">{spot.travelDistance}</span>
                      </div>
                    </div>
                  )}
                </React.Fragment>
              ))}
              <button 
                onClick={() => { setEditingSpot(null); setIsSpotModalOpen(true); }}
                className="w-full py-5 border border-dashed border-slate-200 rounded-[20px] flex items-center justify-center gap-2 text-slate-300 bg-white/50 active:scale-95 transition-all"
              >
                <Plus size={16} />
                <span className="text-[10px] font-bold uppercase tracking-widest">新增行程點</span>
              </button>
            </div>
          </div>
        </div>
      )}
    </div>
  );

  const renderMap = () => (
    <div className="animate-fadeIn space-y-4 pb-32">
      <div className="flex gap-2 overflow-x-auto pb-4 px-1">
        {itinerary.map((dayPlan) => (
          <button
            key={dayPlan.day}
            onClick={() => setMapSelectedDay(dayPlan.day)}
            className={`shrink-0 px-5 py-2.5 rounded-xl font-bold transition-all text-xs ${
              mapSelectedDay === dayPlan.day 
              ? 'bg-[#0891B2] text-white shadow-sm' 
              : 'bg-white text-slate-400 border border-slate-100'
            }`}
          >
            Day {dayPlan.day}
          </button>
        ))}
      </div>
      
      {mapDayPlan && (
        <div className="bg-white p-6 rounded-[24px] border border-slate-100 shadow-sm">
          <div className="flex justify-between items-center mb-6">
            <h3 className="text-lg font-bold flex items-center gap-2 text-slate-800">
              <Navigation className="text-[#0891B2]" size={18} /> 行車序列總覽
            </h3>
          </div>
          <div className="space-y-1 mb-8">
            {mapDayPlan.spots.map((spot, idx) => (
              <div key={spot.id} className="relative">
                <div className="flex items-start gap-4">
                  <div className="w-5 h-5 rounded-full bg-slate-100 text-slate-400 flex items-center justify-center text-[9px] font-bold shrink-0 mt-0.5">
                    {idx + 1}
                  </div>
                  <div className="flex-1 pb-6 border-l border-dashed border-slate-100 ml-[-26px] pl-[26px] last:border-0">
                    <div className="flex items-center gap-2">
                      <span className="text-[10px] font-bold text-[#E11D48]">{spot.time}</span>
                      <p className="text-sm font-bold text-slate-700">{spot.name}</p>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
          <a 
            href={`https://www.google.com/maps/dir/${mapDayPlan.spots.map(s => encodeURIComponent(s.address)).join('/')}`}
            target="_blank" rel="noopener noreferrer"
            className="w-full bg-[#0891B2] text-white py-4 rounded-xl flex items-center justify-center gap-3 font-bold text-sm active:bg-[#06748C] transition-transform"
          >
            <MapIcon size={18} /> 開啟 Google Maps 導航
          </a>
        </div>
      )}
    </div>
  );

  const renderGuide = () => (
    <div className="space-y-4 animate-fadeIn pb-32">
      <div className="bg-white p-8 rounded-[32px] border border-slate-100 shadow-sm">
        <div className="flex items-center justify-between mb-8">
            <h3 className="text-xl font-bold flex items-center gap-2 text-slate-800">
            <Coins className="text-amber-400" size={24} /> 匯率換算助手
            </h3>
            <div className="bg-amber-50 text-amber-600 p-2 rounded-full">
                <Calculator size={18}/>
            </div>
        </div>
        
        <div className="space-y-6">
          <div className="relative">
            <label className="block text-[11px] font-black text-slate-400 uppercase mb-2 tracking-widest flex items-center gap-2">
                <TrendingUp size={12}/> 日元 JPY (手動調整金額)
            </label>
            <input 
              type="number"
              className="w-full px-6 py-4 bg-slate-50 border-2 border-slate-50 rounded-2xl font-black text-2xl text-slate-800 focus:border-[#0891B2] focus:bg-white focus:outline-none transition-all"
              value={jpyInput}
              onChange={(e) => setJpyInput(e.target.value)}
            />
          </div>

          <div className="flex items-center gap-4 py-2">
            <div className="h-[1px] flex-1 bg-slate-100"></div>
            <div className="p-2 bg-[#F8FAFC] rounded-full border border-slate-100 text-slate-300">
                <ArrowRight size={16}/>
            </div>
            <div className="h-[1px] flex-1 bg-slate-100"></div>
          </div>

          <div className="relative">
            <label className="block text-[11px] font-black text-slate-400 uppercase mb-2 tracking-widest">台幣 TWD (預估)</label>
            <div className="w-full px-6 py-5 bg-[#0891B2]/5 border-2 border-[#0891B2]/10 rounded-2xl font-black text-3xl text-[#0891B2]">
              <span className="text-sm mr-2 opacity-50">NT$</span>{twdResult}
            </div>
          </div>

          <div className="pt-6 border-t border-slate-100">
            <label className="block text-[11px] font-black text-slate-400 uppercase mb-3 tracking-widest">目前匯率 (可手動修改)</label>
            <div className="flex items-center gap-3">
                <div className="bg-slate-50 px-4 py-2 rounded-lg text-xs font-bold text-slate-400">1 JPY =</div>
                <input 
                    type="number"
                    step="0.001"
                    className="flex-1 px-4 py-2 bg-slate-50 border border-slate-100 rounded-lg font-bold text-slate-600 focus:outline-none transition-all"
                    value={customRate}
                    onChange={(e) => setCustomRate(e.target.value)}
                />
            </div>
          </div>
        </div>
      </div>
    </div>
  );

  const renderWeather = () => (
    <div className="space-y-4 animate-fadeIn pb-32">
      <div className="bg-white p-6 rounded-[24px] border border-slate-100 shadow-sm">
        <h3 className="text-lg font-bold flex items-center gap-2 mb-6 text-slate-800">
          <CloudSun className="text-[#E11D48]" size={20} /> 沖繩 1 月行程氣候預測
        </h3>
        
        <div className="space-y-3">
          {[
            { date: '1/11 (日)', temp: '16°C ~ 20°C', desc: '晴時多雲', icon: <Sun className="text-amber-400"/>, tip: '洋蔥式穿法，內搭長袖+防風外套' },
            { date: '1/12 (一)', temp: '15°C ~ 18°C', desc: '多雲', icon: <Cloud className="text-slate-400"/>, tip: '北部海風強，建議戴帽子避免頭痛' },
            { date: '1/13 (二)', temp: '17°C ~ 21°C', desc: '晴天', icon: <Sun className="text-amber-500"/>, tip: '適合拍照的好天氣，海邊體感稍涼' },
            { date: '1/14 (三)', temp: '16°C ~ 19°C', desc: '多雲局部雨', icon: <Umbrella className="text-cyan-500"/>, tip: '建議隨身攜帶輕便摺疊傘' }
          ].map((item, i) => (
            <div key={i} className="p-4 bg-slate-50/50 rounded-2xl border border-slate-50">
              <div className="flex justify-between items-center mb-2">
                <div className="flex items-center gap-3">
                    <div className="bg-white p-2 rounded-xl shadow-sm">{item.icon}</div>
                    <div>
                        <p className="text-xs font-black text-slate-800">{item.date}</p>
                        <p className="text-[10px] font-bold text-slate-400 uppercase">{item.desc}</p>
                    </div>
                </div>
                <p className="text-sm font-black text-[#E11D48]">{item.temp}</p>
              </div>
              <p className="text-[10px] text-slate-400 font-bold bg-white px-3 py-1.5 rounded-lg border border-slate-100 leading-relaxed">
                <Info size={10} className="inline mr-1 text-[#0891B2]"/> {item.tip}
              </p>
            </div>
          ))}
        </div>
      </div>
    </div>
  );

  return (
    <div className="min-h-screen bg-[#F8FAFC] px-4 pt-8 pb-10 font-sans">
      <header className="mb-8 flex justify-between items-end px-1">
        <div>
          <h1 className="text-4xl font-black text-slate-800 tracking-tighter italic leading-none">OKINAWA</h1>
          <div className="flex items-center gap-2 mt-2">
            <span className="text-[9px] font-bold text-white bg-[#E11D48] px-2 py-0.5 rounded-full tracking-wider uppercase">Staff Trip</span>
            <span className="text-[9px] font-bold text-slate-400 uppercase tracking-widest">Est. 2026</span>
          </div>
        </div>
        <div className="flex flex-col items-end">
            <p className="text-[10px] font-black text-[#0891B2] uppercase tracking-[0.2em]">Naha, Japan</p>
            <div className="w-8 h-[2px] bg-[#E11D48] mt-1 rounded-full"></div>
        </div>
      </header>

      <main className="max-w-md mx-auto">
        {activeTab === TabType.OVERVIEW && renderOverview()}
        {activeTab === TabType.ITINERARY && renderItinerary()}
        {activeTab === TabType.MAP && renderMap()}
        {activeTab === TabType.GUIDE && renderGuide()}
        {activeTab === TabType.WEATHER && renderWeather()}
      </main>
      
      <BottomNav activeTab={activeTab} setActiveTab={setActiveTab} />
      
      <SpotModal 
        isOpen={isSpotModalOpen} 
        onClose={() => { setIsSpotModalOpen(false); setEditingSpot(null); }} 
        onSave={handleSaveSpot}
        initialSpot={editingSpot}
      />
      
      {activeDayPlan && (
        <DayModal 
          isOpen={isDayModalOpen} 
          onClose={() => setIsDayModalOpen(false)} 
          onSave={handleSaveDay} 
          initialData={activeDayPlan}
        />
      )}
    </div>
  );
};

export default App;
